#!/usr/bin/env bash

HOST="$(hostname -s)"


case "$HOST" in
    hexagon)
        # Don't burn through all my cores
        exec sudo nixos-rebuild --flake "$(realpath ~/config)" --option cores 1 --option max-jobs 4 "$@"
        ;;
    hexamac)
        exec darwin-rebuild --flake "$(realpath ~/config)" "$@"
        ;;
esac
