#!/usr/bin/env bash

HOST="$(hostname -s)"


case "$HOST" in
    hexagon)
        # Don't burn through all my cores
        exec sudo nixos-rebuild "$1" --flake "$(realpath ~/config)" --option cores 1 --option max-jobs 4
        ;;
    hexamac)
        exec darwin-rebuild "$1" --flake "$(realpath ~/config)"
        ;;
esac
